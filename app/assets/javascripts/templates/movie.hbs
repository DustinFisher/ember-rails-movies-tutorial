<div>
  {{#if isEditing}}
    <button {{action "save"}} class="btn btn-primary">Save</button>
    <button {{action "cancel"}} class="btn btn-danger">Cancel</button>
  {{else}}
    <button {{action "edit"}} class="btn btn-primary">Edit</button>
  {{/if}}
</div>
<div>
  {{#if isEditing}}
    <div>{{input type="text" value=editName}} {{input type="text" value=editYear}}</div>
    <div>{{textarea value=editDescription cols="100" rows="10"}}</div>
  {{else}}
    <h2>{{name}} ({{year}})</h2>
    <div>{{description}}</div>
  {{/if}}
  {{outlet}}
</div>
